{
	"description": "Abstract Entity",
	"type": "object",
	"extends": {"$ref" : "/schema/base-abstract" },	
	"properties": {
		
		"type": {
			"description": "Extensible enum",
			"type": "string",
			"required" : true
		},
		"where": {
			"description": "Location of the event",
			"type": "array",
			"required": true,
			"minItems": 1,
			"items": {
				"$ref": "/schema/localization"
			}
		},
		
		"websites" : {
			"type": "array",
			"minItems": 1,
			"required" : false,
			"items": {
				"type": [{
					"type" : "string",
					"description": "A link to a website about the entity",
					"pattern" : "^http:\\/\\/.+$"
				}]
			}
		}
	}
}